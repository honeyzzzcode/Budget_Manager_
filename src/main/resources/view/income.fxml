<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          fx:controller="controller.IncomeController" style="-fx-background-color: lavender">
    <Label text="Enter Amount" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <TextField fx:id="amountField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <Label text="Choose Category" GridPane.rowIndex="9" GridPane.columnIndex="0"/>

    <Button text="PRESS TO ADD" GridPane.rowIndex="11" onAction="#addIncome" GridPane.columnIndex="1"
            style="-fx-font-size: 14px; -fx-text-fill: black; -fx-background-color: pink"/>
    <ChoiceBox fx:id="CBCategory" prefHeight="27.0" prefWidth="161.0" GridPane.columnIndex="1" GridPane.rowIndex="9" />
</GridPane>
