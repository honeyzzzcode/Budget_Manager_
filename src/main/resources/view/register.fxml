<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane fx:controller="controller.RegisterController"
  xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" style="-fx-background-color: lavender">
  <Text text="Create an Account" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

  <Label text="Full Name" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
  <TextField fx:id="fullNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

  <Label text="Username" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
  <TextField fx:id="usernameField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

  <Label text="Password" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
  <PasswordField fx:id="passwordField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

  <Label text="Confirm Password" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
  <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

  <Label text="Enter Budget" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
  <TextField fx:id="budgetField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

  <Label text="Phone Number" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
  <TextField fx:id="phoneField" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

  <Label text="Email Address" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
  <TextField fx:id="emailField" GridPane.rowIndex="10" GridPane.columnIndex="1"/>

  <Button text="Login" GridPane.rowIndex="11" onAction="#handleLoadLogin" GridPane.columnIndex="0"
    style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: pink"/>
  <Button text="Register" GridPane.rowIndex="11" onAction="#handleRegistration" GridPane.columnIndex="1"
    style="-fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: pink"/>

</GridPane>
